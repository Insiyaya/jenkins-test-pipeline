// Jenkinsfile
pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                echo 'Cloning repo...'
                git url: 'https://github.com/<your-username>/jenkins-test-pipeline.git', branch: 'main'
            }
        }
        stage('Build') {
            steps {
                echo 'Running build...'
            }
        }
        stage('Test') {
            steps {
                sh 'python3 app.py'
            }
        }
    }
}
